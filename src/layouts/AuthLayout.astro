---
import "../styles/global.css";
interface Props {
  title?: string;
}
const { title = "HabitFlow" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - Auth</title>
  </head>
  <body class="min-h-screen bg-background text-foreground">
    <header role="banner" class="container mx-auto px-4 py-4">
      <h1 class="text-2xl font-bold">HabitFlow</h1>
    </header>
    <main role="main" aria-label="Authentication" class="flex-1 container mx-auto px-4 py-8 flex items-center justify-center">
      <div class="w-full max-w-md space-y-6">
        <slot />
      </div>
    </main>
  </body>
</html>

<style>
  :global(html) {
    scroll-behavior: smooth;
  }
</style>
